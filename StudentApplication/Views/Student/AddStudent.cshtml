@model StudentApplication.ViewModel.StudentSubjectViewModel
    @{
        ViewBag.Title = "Add Student";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <environment include="Development">
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Student</h3>
                    </div>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="FirstName" autocomplete="off">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" placeholder="FirstName" autocomplete="off">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ClassName"></label>
                            <input asp-for="ClassName" class="form-control" placeholder="ClassName" autocomplete="off">
                            <span asp-validation-for="ClassName" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                            <label asp-for="SubjectName"></label>
                            <input asp-for="SubjectName" class="form-control" placeholder="SubjectName" autocomplete="off" />
                            <span asp-validation-for="SubjectName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Marks"></label>
                            <input asp-for="Marks" class="form-control" placeholder="Marks" autocomplete="off" />
                            <span asp-validation-for="Marks" class="text-danger"></span>
                        </div>*@
                        <div class="card-footer">
                            <button type="submit" asp-action="AddStudent" asp-controller="Student" class="btn btn-primary">Create</button>
                        </div>
                    </form>
            </div>
        </div>
     </div>
